# TabloCrawler Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Tablo API Authentication
TABLO_AUTH_TOKEN=your_tablo_auth_token_here

# Optional: API Configuration
API_BASE_URL=https://api.tabloapp.com

# Optional: Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_NOTIFICATIONS_ENABLED=true

# Optional: Location Configuration (defaults to Padova, Italy)
SEARCH_LATITUDE=45.408153
SEARCH_LONGITUDE=11.875273
SEARCH_RADIUS=4

# Optional: Monitoring Configuration
USER_IDS_FILE_PATH=monitored-users.txt
STATE_FILE_PATH=monitoring-state.json
MONITORING_INTERVAL_SECONDS=60

# Optional: Scanning Configuration
DAYS_TO_SCAN=3
MIN_PARTICIPANTS=2
MAX_DISTANCE=10.0
INTERVAL_SECONDS=300

# Optional: Logging
LOGGING_ENABLED=true

# Example values (replace with your actual credentials):
# TABLO_AUTH_TOKEN=abc123def456ghi789
# TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# TELEGRAM_CHAT_ID=123456789